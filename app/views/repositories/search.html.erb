<h1>Search Github Repositories</h1>
<%= form_tag '/search' do %>
  <%= label_tag :query %>
  <%= text_field_tag :query %>
  <%= submit_tag "Search Github!" %>
<% end %>
<div>
  <% if @items %>
  <ul>
    <% @items.each do |item| %>
    <li>
      <%= item["full_name"] %><br>
      <%= item["description"] %><br>
      <%= link_to("Click hete", item["owner"]["html_url"]) %><br><br>
      
    </li>

  </ul>
  <% end %>
  <% end %>

</div>
